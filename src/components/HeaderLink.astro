---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === "/" + subpath?.[0];
---

<a
  href={href}
  class:list={[
    "inline-block text-lg transition-all hover:text-indigo-400 hover:underline",
    {
      ["font-extrabold text-indigo-700 underline hover:text-indigo-500 dark:text-indigo-500 dark:hover:text-indigo-400"]:
        isActive,
      ["no-underline"]: !isActive,
    },
    className,
  ]}
  {...props}
>
  <slot />
</a>
