---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import "../styles/md.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="flex w-screen justify-center dark:bg-slate-800 dark:text-white">
    <div class="w-full max-w-screen-lg px-4">
      <Header />

      <main class="px-4">
        <article>
          <div class="w-full">
            {
              heroImage && (
                <Image
                  loading={"eager"}
                  width={1020}
                  height={510}
                  src={heroImage}
                  alt=""
                  class="mx-auto my-0 block aspect-video rounded-xl shadow-md"
                />
              )
            }
          </div>

          <div class="m-auto max-w-screen-md p-4">
            <div class="mb-4 py-4 text-center">
              <div class="mb-2 text-base text-gray-600 dark:text-gray-400">
                <FormattedDate date={pubDate} />
                {
                  updatedDate && (
                    <div class="italic">
                      Last updated on <FormattedDate date={updatedDate} />
                    </div>
                  )
                }
              </div>

              <h1 class="mb-4 text-5xl">{title}</h1>

              <hr />
            </div>

            <div class="slotted">
              <slot />
            </div>
          </div>
        </article>
      </main>

      <Footer />
    </div>
  </body>
</html>
