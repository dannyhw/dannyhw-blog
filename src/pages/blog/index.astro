---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="w-screen flex justify-center">
    <div class="max-w-screen-lg w-full px-4">
      <Header />

      <main>
        <section>
          <ul class="flex flex-wrap md:gap-8 gap-2 list-none m-0 p-0">
            {
              posts.map((post) => (
                <li class="group w-full md:w-[calc(50%-1rem)] md:first:w-full">
                  <a
                    class="group-hover:text-indigo-700 no-underline transition-all"
                    href={`/blog/${post.slug}/`}
                  >
                    <img
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                      class="group-hover:shadow-md group-first:w-full"
                    />

                    <h4 class="m-0 text-black group-hover:text-indigo-700 text-2xl group-first:md:text-4xl">
                      {post.data.title}
                    </h4>

                    <p class="text-gray-500 group-hover:text-indigo-700">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
      </main>

      <Footer />
    </div>
  </body>
</html>
